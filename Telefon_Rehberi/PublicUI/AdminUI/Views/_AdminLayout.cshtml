<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~AdminUI/Content/img/favicon.png">

    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/AdminUI/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminUI/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/AdminUI/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/AdminUI/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/AdminUI/Content/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/AdminUI/Content/css/style.css" rel="stylesheet">
    <link href="~/AdminUI/Content/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="~AdminUI/Content/js/html5shiv.js"></script>
      <script src="~AdminUI/Content/js/respond.min.js"></script>
    <![endif]-->
    @RenderSection("head", false)
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <!--logo start-->
            <a href="/Admin/index" class="logo">Hoş Geldiniz<span></span></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <!--  notification end -->
            </div>
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src="Content/Admin/img/avatar1_small.jpg">
                            <span class="username">@Session["KullaniciAdi"].ToString()</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                           
                            <li><a href="/Admin/SifreGuncelle"><i class="icon-cog"></i> Şifre Güncelle </a></li>
                            <li><a href="/Admin/Login"><i class="icon-key"></i> Çıkış Yap </a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="active" href="~/Calisans/Index">
                            <i class="icon-user"></i>
                            <span>Çalışan</span>
                        </a>
                    </li>
                    <li>
                        <a class="active" href="~/Yoneticis/Index">
                            <i class="icon-suitcase"></i>
                            <span>Yönetici</span>
                        </a>
                    </li>
                    <li>
                        <a class="active" href="~/Departmen/Index">
                            <i class="icon-align-justify"></i>
                            <span>Departman</span>
                        </a>
                    </li>
                    <!--multi level menu end-->
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            @RenderBody()
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                @DateTime.Now.Year &copy; Mustafa EREN
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/AdminUI/Content/js/jquery.js"></script>
    <script src="~/AdminUI/Content/js/jquery-1.8.3.min.js"></script>
    <script src="~/AdminUI/Content/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/AdminUI/Content/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/AdminUI/Content/js/jquery.scrollTo.min.js"></script>
    <script src="~/AdminUI/Content/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/AdminUI/Content/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/AdminUI/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/AdminUI/Content/js/owl.carousel.js"></script>
    <script src="~/AdminUI/Content/js/jquery.customSelect.min.js"></script>
    <script src="~/AdminUI/Content/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="~/AdminUI/Content/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="~AdminUI/Content/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="~AdminUI/Content/js/sparkline-chart.js"></script>
    <script src="~AdminUI/Content/js/easy-pie-chart.js"></script>
    <script src="~AdminUI/Content/js/count.js"></script>

    <script>

      //owl carousel

      $(document).ready(function() {
          $("#owl-demo").owlCarousel({
              navigation : true,
              slideSpeed : 300,
              paginationSpeed : 400,
              singleItem : true,
			  autoPlay:true

          });
      });

      //custom select box

      $(function(){
          $('select.styled').customSelect();
      });

    </script>
    @RenderSection("body", false)

</body>
</html>

